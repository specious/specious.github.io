@import 'nib/vendor'

body
  background-color #02102c
  background url('../gfx/bg.png') no-repeat center center fixed
  background-size cover
  overflow hidden
a
  outline 0
h1, h2
  font-family "helvetica", sans-serif
  text-shadow 0 2px 1px #f6f6f6, 0 3px 0 #efefef, 0 4px 0 #e9e9e9, 0 5px 0 #e3e3e3
  text-align center
  margin 0
h1
  color #c40c0c
  font-size 97px
  margin-top 20px
h2
  color #979214
  font-size 66px
  margin-top 3px
#flower
  margin 0 auto
  position relative
  top 170px