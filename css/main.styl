@import 'nib/vendor'

@import url(http://fonts.googleapis.com/css?family=Oswald)

// Calculations to contain the spinner inside a fixed sized element
// with { overflow: hidden } to prevent page scroll bars from going wild
diameter = 120px // same as in flower.styl
distance = 1.2   // same as in flower.styl
allowance = 40px // allowance for bubbles glowing
span = diameter * (1 + 2 * distance) + allowance

body
  color white
  background-color black
  text-align center
a
  color yellow
  outline 0
  text-decoration none
  &:hover
    color lightblue
h1
  font-family helvetica, sans-serif
  color #c40c0c
  font-size 97px
  text-shadow 0 2px 1px #f6f6f6, 0 3px 0 #efefef, 0 4px 0 #e9e9e9, 0 5px 0 #e3e3e3
  text-align center
  margin 0
  margin-top 20px
#bio
  font-family Oswald
  font-size 1.2em
  padding 1em
  max-width 25em
  display inline-block
  strong
    color #d55024
  .term
    color #be2cd4
#spinner
  width span
  height span
  border-radius 50%
  vertical-align top
  display inline-block
  overflow hidden
.flower
  position relative
  top ((span - diameter) / 2)
  display inline-block